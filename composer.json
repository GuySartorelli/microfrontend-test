{
    "name": "microfrontend/test",
    "require": {
        "php": "^8.3",
        "silverstripe/recipe-cms": "^6",
        "silverstripe/startup-theme": "^1"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/src/"
        }
    },
    "config": {
        "sort-packages": true,
        "process-timeout": 600,
        "allow-plugins": {
            "composer/installers": true,
            "silverstripe/recipe-plugin": true,
            "silverstripe/vendor-plugin": true
        },
        "preferred-install": {
            "silverstripe/*": "source",
            "silverstripe-themes/*": "source",
            "creative-commoners/*": "source",
            "symbiote/*": "source",
            "tractorcow/*": "source",
            "dnadesign/*": "source",
            "bringyourownideas/*": "source",
            "colymba/*": "source",
            "cwp/*": "source",
            "guysartorelli/*": "source",
            "*/*": "dist"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "extra": {
        "project-files-installed": [
            ".htaccess",
            "app/.htaccess",
            "app/_config.php",
            "app/_config/mimevalidator.yml",
            "app/_config/mysite.yml",
            "app/src/Page.php",
            "app/src/PageController.php"
        ],
        "public-files-installed": [
            ".htaccess",
            "index.php",
            "web.config"
        ],
        "expose": [
            "piral-app/dist",
            "piral-module-one/dist",
            "piral-module-two/dist",
            "piral-module-form/dist",
            "piral-module-form-textarea/dist",
            "piral-module-form-vue/dist"
        ],
        "resources-dir": "_resources"
    }
}
